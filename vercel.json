{
    "version": 2,
    "builds": [
        {
            "src": "api/**/*.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        },
        {
            "src": "asset/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": "/asset/(.*)",
            "dest": "/asset/$1"
        },
        {
            "src": "/ticket/(.*)",
            "dest": "/public/ticket.html"
        },
        {
            "src": "/admin",
            "dest": "/public/admin.html"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ]
}